<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
		<!--Framework-->
    <TargetFrameworks>net8.0;net7.0;net6.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
		
		<!--Package metadata-->
		<Title>Beporsoft.Blazor.Charts</Title>
		<Description>A Blazor library for display charts based on Chart.Js</Description>
		<Authors>Bruno Portela</Authors>
		<PackageProjectUrl>https://github.com/bportelalp/Beporsoft.Blazor.Charts</PackageProjectUrl>
		<RepositoryUrl>https://github.com/bportelalp/Beporsoft.Blazor.Charts</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>chart;chartjs;chart.js;linear;doughnut;bar;scatter;plot;bubble;pie;radial</PackageTags>
		
		<!--Versioning-->
		<VersionPrefix>0.1.0</VersionPrefix>
		<VersionSuffix></VersionSuffix>
		<AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
		<FileVersion>$(AssemblyVersion)</FileVersion>

		<!--Package build-->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>false</GenerateDocumentationFile>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.2" />
  </ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.14" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.27" />
	</ItemGroup>
	
</Project>
